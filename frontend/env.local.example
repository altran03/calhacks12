# Frontend Environment Variables
# Copy this file to .env.local and add your actual values
# This file contains frontend-specific environment variables

# =============================================================================
# Application Configuration
# =============================================================================
NEXT_PUBLIC_APP_NAME=CareLink
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=AI-powered hospital discharge coordination platform
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# API Configuration
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_API_TIMEOUT=30000

# =============================================================================
# Mapbox Configuration
# =============================================================================
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here
NEXT_PUBLIC_MAPBOX_STYLE=mapbox://styles/mapbox/streets-v12
NEXT_PUBLIC_MAPBOX_ZOOM=12
NEXT_PUBLIC_MAPBOX_CENTER_LAT=37.7749
NEXT_PUBLIC_MAPBOX_CENTER_LNG=-122.4194

# =============================================================================
# Google Maps Configuration (Alternative to Mapbox)
# =============================================================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
NEXT_PUBLIC_GOOGLE_MAPS_CENTER_LAT=37.7749
NEXT_PUBLIC_GOOGLE_MAPS_CENTER_LNG=-122.4194
NEXT_PUBLIC_GOOGLE_MAPS_ZOOM=12

# =============================================================================
# Feature Flags
# =============================================================================
NEXT_PUBLIC_ENABLE_MAP=true
NEXT_PUBLIC_ENABLE_REAL_TIME_UPDATES=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=false

# =============================================================================
# UI Configuration
# =============================================================================
NEXT_PUBLIC_THEME=light
NEXT_PUBLIC_PRIMARY_COLOR=#3B82F6
NEXT_PUBLIC_SECONDARY_COLOR=#10B981
NEXT_PUBLIC_ACCENT_COLOR=#F59E0B

# =============================================================================
# Notification Configuration
# =============================================================================
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key_here
NEXT_PUBLIC_NOTIFICATION_ENABLED=true
NEXT_PUBLIC_NOTIFICATION_SOUND=true

# =============================================================================
# Analytics Configuration
# =============================================================================
NEXT_PUBLIC_GA_TRACKING_ID=your_google_analytics_tracking_id_here
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token_here
NEXT_PUBLIC_ANALYTICS_ENABLED=true

# =============================================================================
# Development Configuration
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_HOT_RELOAD=true
NEXT_PUBLIC_DEV_TOOLS=true

# =============================================================================
# Production Configuration
# =============================================================================
# Uncomment and configure for production deployment
# NODE_ENV=production
# NEXT_PUBLIC_DEBUG=false
# NEXT_PUBLIC_HOT_RELOAD=false
# NEXT_PUBLIC_DEV_TOOLS=false

# =============================================================================
# Security Configuration
# =============================================================================
NEXT_PUBLIC_CSRF_TOKEN=your_csrf_token_here
NEXT_PUBLIC_SESSION_SECRET=your_session_secret_here

# =============================================================================
# External Services
# =============================================================================
# Sentry (for error tracking)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# Firebase (for push notifications)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain_here
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket_here
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id_here

# =============================================================================
# Performance Configuration
# =============================================================================
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_LAZY_LOADING=true
NEXT_PUBLIC_PREFETCH_PAGES=true
NEXT_PUBLIC_COMPRESSION=true

# =============================================================================
# Accessibility Configuration
# =============================================================================
NEXT_PUBLIC_HIGH_CONTRAST=false
NEXT_PUBLIC_LARGE_TEXT=false
NEXT_PUBLIC_SCREEN_READER_SUPPORT=true
NEXT_PUBLIC_KEYBOARD_NAVIGATION=true
